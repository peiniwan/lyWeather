<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/notification_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="城市名"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/notification_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_city_name"
            android:layout_marginLeft="10dp"
            android:text="天气描述"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notification_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notification_des"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="温度"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>